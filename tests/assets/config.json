{
    "logging": {
        "logs": {
            "default": {
                "level": "ERROR",
                "writer": {
                    "output": "stdout"
                },
                "encoder": {
                    "format": "console"
                }
            },
            "writable_file_server": {
                "level": "DEBUG",
                "writer": {
                    "output": "stdout"
                },
                "encoder": {
                    "format": "console"
                },
                "include": [
                    "http.handlers.writable_file_server"
                ]
            }
        }
    },
    "apps": {
        "http": {
            "servers": {
                "example": {
                    "listen": [
                        ":8888"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "method": [
                                        "PUT",
                                        "DELETE"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "writable_file_server",
                                    "root": "tests/root/"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
